{
    "compilerOptions": {
      "target": "es2016",
      "module": "nodenext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "outDir": "./compiled",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*",
      "spec/**/*"
    ],
    // "exclude": [
    //   "spec/**/*"
    // ]
}